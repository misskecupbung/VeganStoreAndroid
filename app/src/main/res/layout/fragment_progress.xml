<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProgressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:src="@drawable/shopping_cart1"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kok Keranjangmu Sepi?"
                    android:textSize="14sp"
                    android:textColor="@color/dark"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Yuk Tambahakan Produk yang Kamu Suka!"
                    android:textSize="12sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/btn_belanja"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_btn_login2"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Belanja"
                    android:textColor="@color/white"

                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>